<% $activeapps = [] %>
<% apps = Appparam.all %>
<% if !apps or apps.count==0 %>
  <% init_credentials("System") %>
<% end%>
<% apps.each do |a| %>
  <%  $activeapps << a.domain+a.right if a.access %>
<% end %>

<% if user_signed_in? %>
    <% creds = getUserCreds %>
    <% if creds %>
        <% for i in 0..creds.length-1 %>
            <% if creds[i][0..9] == "Funktionen" %>
                <%= build_kachel_color(creds[i][10..creds.length-1], "", nil, nil, nil) %>
            <% end %>
        <% end %>
    <% end %>
<% else %>
    <% for i in 0..$activeapps.length-1 %>
        <% if $activeapps[i][0..9] == "Funktionen" and $activeapps[i][10..$activeapps.length-1] != "meine Abfragen" %>
            <%= build_kachel_color($activeapps[i][10..$activeapps.length-1], "", nil, nil, nil) %>
        <% end %>
    <% end %>
<% end %>
