   <%= form_for @signage_camp do |f| %>

        <% if @signage_camp.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@signage_camp.errors.count, "error") %> prohibited this calender from being saved:</h2>
              <ul>
                  <% @signage_camp.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
              </ul>
            </div>
        <% end %>

        <div class="row">
            <div class="col-md-6">
                <div class="panel panel-default">
                    <div class="panel-heading header">
                      <li_header>
                      <%= link_to company_path(:id => @signage_camp.owner_id, :topic => "Digital Signage (Inhalt)") do %>
                        <i class="btn btn-primary glyphicon glyphicon-list"></i>
                      <% end %>
                      <% @signage_camp.name %>
                      </li_header>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="panel-body">
                    <div class="form-group">
                    <div class="form-group">
                      <%= f.label "Name" %><br/>
                      <%= f.text_field :name, class:"form-control"%>
                    </div>
                    <div class="form-group">
                      <%= f.label "Beschreibung" %><br/>
                      <%= f.text_area :description, class:"form-control"%>
                    </div>
                     <%= f.hidden_field :owner_type, class:"form-control" %>
                     <%= f.hidden_field :owner_id, class:"form-control" %>
                    <div class="actions">
                       <%= f.submit "Speichern",  class:"btn btn-primary btn-lg"%>
                    </div>
                </div>
                
            </div>
        </div>
    <% end %>                
